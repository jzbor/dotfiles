fgit () {
    [ -z "$1" ] && git help && return 1
    git "$1" "$(git log --oneline --color=always | fzf --preview="git show --color=always {1}" | cut -f1 -d' ')"
}

fman () {
    selection="$(man -k . \
        | fzf --preview "echo {} | sed 's/\([a-zA-Z0-9_\.-]*\) (\([a-z0-9]*\)).*/man -P cat \2 \1/' | sh" \
        | sed 's/\([a-zA-Z0-9_\.-]*\) (\([a-z0-9]*\)).*/man \2 \1/')"
    if [ -n "$selection" ]; then
        echo "$selection" | sh
        fman
    fi
}

