alias mounted="cd /run/media/$USER && ls"

mnt () {
    lsblk -pln -o SIZE,LABEL,NAME
    print "\nPlease select a device: "
    read device
    echo
    udisksctl mount --block-device "$device" 2>&2
}

umnt () {
    lsblk -pln -o SIZE,LABEL,NAME
    print "\nPlease select a device: "
    read device
    echo
    udisksctl unmount --block-device "$device" 2>&2
}
