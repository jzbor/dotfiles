}

#
# # ex - archive extractor
# # usage: ex <file>
ex ()
{
  if [ -f $1 ] ; then
    case $1 in
      *.tar.bz2)   tar xvjf $1   ;;
      *.tar.gz)    tar xvzf $1   ;;
      *.tar.xz)    tar xvf $1   ;;
      *.bz2)       bunzip2 $1   ;;
      *.rar)       unrar x $1     ;;
      *.gz)        gunzip $1    ;;
      *.tar)       tar xf $1    ;;
      *.tbz2)      tar xjf $1   ;;
      *.tgz)       tar xzf $1   ;;
      *.zip)       unzip $1     ;;
      *.Z)         uncompress $1;;
      *.7z)        7z x $1      ;;
      *)           echo "'$1' cannot be extracted via ex()" ;;
    esac
  else
    echo "'$1' is not a valid file"
  fi
}


cd () {
    gitdir="$(git rev-parse --show-toplevel 2> /dev/null)"
    if [ "$#" -gt 0 ]; then
	command cd "$@"
    elif [ "$gitdir" = "$(pwd)" ]; then
	command cd "$HOME"
    elif [ "$gitdir" = "" ]; then
	command cd "$HOME"
    else
	command cd "$gitdir"
    fi
}


